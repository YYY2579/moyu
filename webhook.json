[
  {
    "id": "auto-deploy",
    "execute-command": "/bin/sh",
    "command-working-directory": "/opt/moyu",
    "pass-arguments-to-command": [
      {
        "source": "string",
        "name": "-c"
      },
      {
        "source": "string",
        "name": "/opt/moyu/scripts/webhook-handler.sh"
      }
    ],
    "trigger-rule": {
      "and": [
        {
          "match": {
            "type": "payload-hmac-sha256",
            "secret": "YOUR_WEBHOOK_SECRET_HERE",
            "parameter": {
              "source": "header",
              "name": "X-Hub-Signature-256"
            }
          }
        },
        {
          "match": {
            "type": "value",
            "value": "refs/heads/main",
            "parameter": {
              "source": "payload",
              "name": "ref"
            }
          }
        }
      ]
    }
  }
]
